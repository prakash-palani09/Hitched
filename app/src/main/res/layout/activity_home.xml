<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="22dp">

            <!-- App Title -->
            <TextView
                android:id="@+id/textViewCreator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Wedding Planner App"
                android:textColor="#c2185b"
                android:textSize="24sp" />

            <!-- Welcome Text -->
            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewCreator"
                android:layout_centerHorizontal="true"
                android:textColor="#c2185b"
                android:textSize="24sp" />

            <!-- App Image -->
            <ImageView
                android:id="@+id/imageViewLogo"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_below="@id/welcomeText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:src="@drawable/img123" />

            <!-- Wedding Details -->
            <TextView
                android:id="@+id/weddingDetailsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewLogo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Fetching wedding details..."
                android:textColor="#c2185b"
                android:textSize="18sp"
                android:gravity="center" />
            <TextView
                android:id="@+id/weddingCountdownText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/weddingDetailsText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Calculating days..."
                android:textColor="#c2185b"
                android:textSize="18sp"
                android:gravity="center"/>

            <!-- Add Wedding Details Button -->

            <!-- Plan a Wedding Button -->

            <Button
                android:id="@+id/buttonAddWeddingDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/weddingDetailsText"
                android:layout_marginTop="63dp"
                android:text="Add Wedding Details" />

            <Button
                android:id="@+id/buttonPlanWedding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonAddWeddingDetails"
                android:layout_marginTop="16dp"
                android:text="Plan a Wedding" />

            <!-- Manage Catering -->
            <Button
                android:id="@+id/buttonCatering"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonPlanWedding"
                android:layout_marginTop="16dp"
                android:text="Manage Catering" />

            <!-- Choose Wedding Theme -->
            <Button
                android:id="@+id/buttonWeddingTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonCatering"
                android:layout_marginTop="16dp"
                android:text="Choose Wedding Theme" />

            <!-- Send Invitations -->
            <Button
                android:id="@+id/buttonInvitations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonWeddingTheme"
                android:layout_marginTop="16dp"
                android:text="Send Invitations" />

            <!-- Exit Button -->
            <Button
                android:id="@+id/buttonExit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonInvitations"
                android:layout_marginTop="16dp"
                android:text="Exit" />

        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
